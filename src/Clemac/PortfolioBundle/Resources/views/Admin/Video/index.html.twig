{% extends 'ClemacPortfolioBundle::layout_admin.html.twig' %}

{% block title %}Vidéo - {{ parent() }}{% endblock %}

{% block breadcrumbTitle %}
  <i class="fa fa-film"></i> Vidéo
  <small>Liste des vidéos</small>
{% endblock %}

{% block breadcrumbLink %}
  <li><a href="{{ path('clemac_portfolio_admin_achievement') }}"><i class="fa fa-film"></i> Vidéo</a></li>
  <li class="active"><a href="{{ path('clemac_portfolio_admin_achievement') }}">index</a></li>
{% endblock %}

{% block bodycontent %}
    <h1>Video list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Iframe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('clemac_portfolio_admin_video_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.iframe }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('clemac_portfolio_admin_video_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('clemac_portfolio_admin_video_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
