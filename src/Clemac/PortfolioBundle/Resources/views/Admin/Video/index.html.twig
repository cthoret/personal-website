{% extends 'ClemacPortfolioBundle::layout_admin.html.twig' %}

{% block title %}Vidéo - {{ parent() }}{% endblock %}

{% block breadcrumbTitle %}
  <i class="fa fa-film"></i> Vidéo
  <small>Liste des vidéos</small>
{% endblock %}

{% block breadcrumbLink %}
  <li><a href="{{ path('clemac_portfolio_admin_achievement') }}"><i class="fa fa-film"></i> Vidéo</a></li>
  <li class="active"><a href="{{ path('clemac_portfolio_admin_achievement') }}">index</a></li>
{% endblock %}

{% block bodycontent %}
  <p>
    <a href="{{ path('clemac_portfolio_admin_video_new') }}" class="btn btn-success"><i class="fa fa-plus"></i> Create a new entry</a>
  </p>
  {% for entity in entities %}
    <div class="box box-success collapsed-box">
      <div class="box-header with-border">
        <h3 class="box-title">{{ entity.title }}</h3>
        <div class="box-tools pull-right">
          <a href="{{ path('clemac_portfolio_admin_video_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-warning"><i class="fa fa-edit"></i> edit</a>
          <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        </div>
      </div><!-- /.box-header -->
      <div class="box-body">
        <div class="col-sm-12 col-md-6 col-lg-5">
          {{ entity.iframe|raw }}
        </div>
        <div class="col-sm-12 col-md-6 col-lg-7">
          <p>
            {{ entity.description }}
          </p>
        </div>
        <div class="clearfix"></div>
      </div><!-- /.box-body -->
    </div>
  {% endfor %}

  <p>
    <a href="{{ path('clemac_portfolio_admin_video_new') }}" class="btn btn-success"><i class="fa fa-plus"></i> Create a new entry</a>
  </p>
{% endblock %}
