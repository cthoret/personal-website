{% extends 'ClemacPortfolioBundle::layout_admin.html.twig' %}

{% block title %}Nouveau projet - {{ parent() }}{% endblock %}

{% block breadcrumbTitle %}
  <i class="fa fa-code"></i> Site web
  <small>Nouveau projet</small>
{% endblock %}

{% block breadcrumbLink %}
  <li><a href="{{ path('clemac_portfolio_admin_achievement') }}"><i class="fa fa-code"></i> Site web</a></li>
  <li class="active">Nouveau projet</li>
{% endblock breadcrumbLink %}

{% block bodycontent %}
  <hr />
  <div class="box box-success">
    <div class="box-header">
      <h3 class="box-title">Nouveau site web</h3>
    </div><!-- /.box-header -->
    <div class="box-body">
      {{ form_start(form) }}
        <div class="box-body">
          {{ form_errors(form) }}

          {{ form_row(form.title) }}
          {{ form_row(form.description) }}
          {{ form_row(form.image) }}
          {{ form_row(form.url) }}

          {{ form_widget(form._token) }}
        </div><!-- /.box-body -->

        <div class="box-footer">
          <div class="pull-right">
            <a href="{{ path('clemac_portfolio_admin_achievement') }}" class="btn btn-default"><i class="fa fa-list"></i> Back to the list</a>
          </div>
          <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i> Cr√©e</button>
        </div>
      </form>
    </div><!-- /.box-body -->
  </div>
{% endblock %}
